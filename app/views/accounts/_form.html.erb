<%= form_with(model: @account, local: true) do |form| %>
    <div class="form-group">
     <%= form.label :name %>
      <%= form.text_field :name, placeholder:"Name", class:"form-control" %>
    </div>
    <div class="form-group">
     <%= form.label :bank %>
      <%= form.text_field :bank, placeholder:"Bank", class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-primary btn-sm" %>
    </div>

<% end %>